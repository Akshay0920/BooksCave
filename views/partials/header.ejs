<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>BooksCave</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/css/styles.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet" />

  <style>
    
    .navbar-nav .nav-link:not(.text-danger):hover {
      background-color: rgba(0, 123, 255, 0.1); 
      border-radius: 5px;
      transition: background-color 0.2s ease-in-out;
    }
  </style>
</head>
<body>
  <% if (typeof showNavbar === 'undefined' || showNavbar !== false) { %>
  <nav class="navbar navbar-expand-lg bg-white shadow-sm px-3">
    <a class="navbar-brand fw-bold" href="/">BooksCave</a>
    <form class="d-flex mx-auto" action="/" method="GET" style="width: 500px">
      <input
        class="form-control"
        name="search"
        type="search"
        placeholder="Search by Title, Author, ISBN"
        value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
        required
      />
      <button class="btn btn-outline-danger ms-2" type="submit">Search</button>
    </form>
    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
      <% if (currentPage !== 'home') { %>
        <li class="nav-item mx-2">
          <a class="nav-link" href="/"><i class="bi bi-house-door"></i> Home</a>
        </li>
      <% } %>

      <% if (currentPage !== 'orders') { %>
        <li class="nav-item">
          <a class="nav-link" href="/orders">Order History</a>
        </li>
      <% } %>
      <% if (currentPage !== 'cart') { %>
        <li class="nav-item mx-2">
          <a class="nav-link" href="/cart"><i class="bi bi-cart"></i> Cart</a>
        </li>
      <% } %>
      <li class="nav-item mx-2">
        <a class="nav-link" href="/profile"><i class="bi bi-person-circle"></i> Profile</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-danger" href="/logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
      </li>
    </ul>
  </nav>
  <% } %>
</body>
</html>
