<%- include('partials/header') %>
<body class= login-page>


<div class="container login-signup-container login-page">
  <div class="row justify-content-center align-items-center" style="height: 100vh;">
    <div class="col-md-6">

      <div class="card p-4 login-signup-card">
              <div class="text-center mb-4">
        <h2>Welcome to BooksCave!</h2>
      </div>
 
        <form action="/login" method="POST">
          <div class="form-group mb-3 position-relative">
            <label for="email">Email:</label>
            <input type="email" name="email" class="form-control" id="email" required placeholder="Enter email">
            <div class="popup-info">Enter your registered email address</div>
          </div>
          <div class="form-group mb-3 position-relative">
            <label for="password">Password:</label>
            <input type="password" name="password" class="form-control" id="password" required placeholder="Enter password">
            <div class="popup-info">Enter your password</div>
          </div>
          <button type="submit" class="btn btn-danger w-100">Login</button>
        </form>
        <p class="mt-3 text-center">Don't have an account? <a href="/signup">Sign Up</a></p>
      </div>
    </div>
  </div>
</div>
</body>

<%- include('partials/footer') %>


